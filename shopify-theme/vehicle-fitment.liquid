<!-- Trigger Button -->
<button id="jb-open-fitment-modal" class="jb-select-vehicle-btn">
  Select my vehicle
</button>

<!-- Modal Overlay -->
<div id="jb-fitment-modal" class="jb-modal" style="display: none;">
  <div class="jb-modal__backdrop" onclick="JBFitment.closeModal()"></div>

  <div class="jb-modal__content">
    <!-- Close Button -->
    <button class="jb-modal__close" onclick="JBFitment.closeModal()">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    <!-- Header -->
    <h2 class="jb-modal__title">FIND THE PRODUCTS THAT SUIT YOUR VEHICLE</h2>

    <!-- Rego Input -->
    <div class="jb-modal__section">
      <label class="jb-modal__label">What is your rego plate?</label>
      <input
        type="text"
        id="jb-rego-input"
        class="jb-modal__rego-input"
        placeholder="ABC123"
        maxlength="10"
        autocomplete="off"
      />
    </div>

    <!-- State Selection -->
    <div class="jb-modal__section">
      <label class="jb-modal__label">Select your state</label>
      <div class="jb-modal__states">
        <button class="jb-modal__state-btn" data-state="ACT" onclick="JBFitment.selectState('ACT')">ACT</button>
        <button class="jb-modal__state-btn" data-state="NSW" onclick="JBFitment.selectState('NSW')">NSW</button>
        <button class="jb-modal__state-btn" data-state="NT" onclick="JBFitment.selectState('NT')">NT</button>
        <button class="jb-modal__state-btn" data-state="QLD" onclick="JBFitment.selectState('QLD')">QLD</button>
        <button class="jb-modal__state-btn" data-state="SA" onclick="JBFitment.selectState('SA')">SA</button>
        <button class="jb-modal__state-btn" data-state="TAS" onclick="JBFitment.selectState('TAS')">TAS</button>
        <button class="jb-modal__state-btn" data-state="VIC" onclick="JBFitment.selectState('VIC')">VIC</button>
        <button class="jb-modal__state-btn" data-state="WA" onclick="JBFitment.selectState('WA')">WA</button>
      </div>
    </div>

    <!-- Check Button -->
    <button id="jb-check-btn" class="jb-modal__check-btn" onclick="JBFitment.lookup()">
      Check Fitment
    </button>

    <!-- Result -->
    <div id="jb-fitment-result" class="jb-modal__result" style="display:none;"></div>
  </div>
</div>

