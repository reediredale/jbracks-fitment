<script>
  const JBFitment = {
    API_URL: 'https://jbracks-fitment.vercel.app/api/vehicle-lookup',
    selectedState: null,

    openModal() {
      document.getElementById('jb-fitment-modal').style.display = 'flex';
      document.body.style.overflow = 'hidden';
      document.getElementById('jb-rego-input').focus();
    },

    closeModal() {
      document.getElementById('jb-fitment-modal').style.display = 'none';
      document.body.style.overflow = '';
      this.resetForm();
    },

    selectState(state) {
      this.selectedState = state;

      // Update button states
      document.querySelectorAll('.jb-modal__state-btn').forEach(btn => {
        btn.classList.remove('selected');
      });
      document.querySelector(`[data-state="${state}"]`).classList.add('selected');
    },

    resetForm() {
      document.getElementById('jb-rego-input').value = '';
      document.getElementById('jb-fitment-result').style.display = 'none';
      document.querySelectorAll('.jb-modal__state-btn').forEach(btn => {
        btn.classList.remove('selected');
      });
      this.selectedState = null;
    },

    async lookup() {
      const rego = document.getElementById('jb-rego-input').value.trim().toUpperCase();
      const state = this.selectedState;
      const btn = document.getElementById('jb-check-btn');
      const resultDiv = document.getElementById('jb-fitment-result');

      if (!state || !rego) {
        this.showResult('error', 'Please enter your rego plate and select your state.');
        return;
      }

      btn.disabled = true;
      btn.textContent = 'Checking...';
      resultDiv.style.display = 'none';

      try {
        const res = await fetch(this.API_URL, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ rego, state }),
        });

        const data = await res.json();

        if (!res.ok) {
          this.showResult('error', data.error || data.details || 'Lookup failed. Please try again.');
          return;
        }

        const { vehicle, fitment } = data;
        const vehicleName = vehicle.description || `${vehicle.make} ${vehicle.model} (${vehicle.year})`;

        if (fitment.compatible === true) {
          this.showResult('compatible',
            `<div class="jb-modal__vehicle">✅ ${vehicleName}</div>
             <strong>Great news!</strong> Your vehicle has a compatible 2" hitch receiver. This rack will fit your ${vehicle.make}.
             ${fitment.notes ? `<div style="margin-top:12px;font-size:14px;opacity:0.9;">${fitment.notes}</div>` : ''}`
          );
        } else if (fitment.compatible === false) {
          this.showResult('incompatible',
            `<div class="jb-modal__vehicle">❌ ${vehicleName}</div>
             <strong>Unfortunately</strong>, your vehicle doesn't have a standard 2" hitch receiver.
             ${fitment.notes ? `<div style="margin-top:12px;font-size:14px;opacity:0.9;">${fitment.notes}</div>` : ''}
             <div style="margin-top:12px;"><a href="/pages/contact" style="color:inherit;text-decoration:underline;font-weight:600;">Contact us</a> for alternative mounting options.</div>`
          );
        } else {
          this.showResult('unknown',
            `<div class="jb-modal__vehicle">⚠️ ${vehicleName}</div>
             We couldn't confirm fitment for your specific vehicle in our database.
             <div style="margin-top:12px;"><a href="/pages/contact" style="color:inherit;text-decoration:underline;font-weight:600;">Contact us</a> and we'll check compatibility for you.</div>`
          );
        }

        // Optional: track the lookup in GA4
        if (typeof gtag === 'function') {
          gtag('event', 'vehicle_fitment_check', {
            vehicle_make: vehicle.make,
            vehicle_model: vehicle.model,
            vehicle_year: vehicle.year,
            fitment_result: fitment.compatible === true ? 'compatible' : fitment.compatible === false ? 'incompatible' : 'unknown',
          });
        }

      } catch (err) {
        this.showResult('error', 'Something went wrong. Please try again.');
        console.error('JB Fitment error:', err);
      } finally {
        btn.disabled = false;
        btn.textContent = 'Check Fitment';
      }
    },

    showResult(type, html) {
      const resultDiv = document.getElementById('jb-fitment-result');
      resultDiv.className = `jb-modal__result jb-modal__result--${type}`;
      resultDiv.innerHTML = html;
      resultDiv.style.display = 'block';
    }
  };

  // Setup event listeners
  document.addEventListener('DOMContentLoaded', function() {
    // Open modal button
    document.getElementById('jb-open-fitment-modal')?.addEventListener('click', () => {
      JBFitment.openModal();
    });

    // Allow Enter key to trigger lookup
    document.getElementById('jb-rego-input')?.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') JBFitment.lookup();
    });

    // Close on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') JBFitment.closeModal();
    });
  });
</script>
